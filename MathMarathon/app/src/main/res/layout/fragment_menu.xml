<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="@drawable/welcome_bg"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:paddingLeft="50dp"
        android:orientation="vertical"
        android:paddingRight="50dp"
        android:gravity="center">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="60dp"
            android:src="@drawable/main_menu_title_img"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="START GAME"
            android:textSize="22dp"
            android:textStyle="bold"
            android:id="@+id/MenuFragmentStartButton"
            android:textColor="@color/darkNavyColor"
            android:layout_marginBottom="40dp"
            android:background="@drawable/menu_button_riple_effect"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Friend Requests"
            android:textSize="22dp"
            android:textStyle="bold"
            android:id="@+id/MenuFragmentFriendButton"
            android:textColor="@color/darkNavyColor"
            android:background="@drawable/menu_button_riple_effect"
            android:layout_marginBottom="40dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="MY PROFILE"
            android:textSize="22dp"
            android:id="@+id/MenuFragmentMyProfile"
            android:textColor="@color/darkNavyColor"
            android:textStyle="bold"
            android:background="@drawable/menu_button_riple_effect"/>
    </LinearLayout>
</LinearLayout>